<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:component-scan base-package="org.opensingular.flow"/>

    <bean name="singularFlowConfigurationBean" class="org.opensingular.flow.persistence.util.HibernateSingularFlowConfigurationBean">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="definitionsPackages" value="org.opensingular.flow"/>
        <property name="userService" ref="testUserService"/>
        <property name="processGroupCod" value="SINGULARTEST"/>
    </bean>

    <import resource="conf/database-mssql.xml" />
    <import resource="conf/database-oracle.xml" />

</beans>

<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="flow-persistence-unit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <non-jta-data-source>java:/dbTelecomunicacao</non-jta-data-source>

        <properties>
            <property name="jboss.entity.manager.factory.jndi.name" value="persistence/persistence-pu" />
            <property name="hibernate.dialect" value="br.gov.anatel.anatelcomum.hibernate.AnatelSQLServerDialect" />
            <property name="hibernate.jdbc.use_get_generated_keys" value="false" />
            <property name="hibernate.jdbc.batch_size" value="30" />
            <property name="hibernate.max_fetch_depth" value="5" />

            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>

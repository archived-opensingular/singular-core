<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:component-scan base-package="br.net.mirante.singular"/>
    <import resource="conf/database.xml"/>

    <bean id="formService" class="br.net.mirante.singular.form.service.FormService">
        <constructor-arg ref="formDAO"/>
        <constructor-arg ref="formVersionDAO"/>
        <constructor-arg ref="formAnnotationDAO"/>
        <constructor-arg ref="formAnnotationVersionDAO"/>
        <constructor-arg ref="formTypeDAO"/>
    </bean>

    <bean id="formDAO" class="br.net.mirante.singular.form.persistence.dao.FormDAO" />
    <bean id="formVersionDAO" class="br.net.mirante.singular.form.persistence.dao.FormVersionDAO" />
    <bean id="formAnnotationDAO" class="br.net.mirante.singular.form.persistence.dao.FormAnnotationDAO" />
    <bean id="formAnnotationVersionDAO" class="br.net.mirante.singular.form.persistence.dao.FormAnnotationVersionDAO" />
    <bean id="formTypeDAO" class="br.net.mirante.singular.form.persistence.dao.FormTypeDAO" />
</beans>

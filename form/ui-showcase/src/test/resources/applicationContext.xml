<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:component-scan base-package="br.net.mirante.singular"/>
    <import resource="conf/database.xml"/>

    <bean id="uiAdminWicketFilterContext" class="br.net.mirante.singular.showcase.wicket.UIAdminWicketFilterContext"/>
    <bean id="myWebApp" class="br.net.mirante.singular.showcase.wicket.ShowcaseApplication"/>

    <bean id="singularFormConfig" class="br.net.mirante.singular.form.wicket.SingularFormConfigWicketImpl">
        <property name="serviceRegistry" ref="springServiceRegistry"/>
    </bean>

    <bean id="singularFormContext" class="br.net.mirante.singular.form.wicket.SingularFormContextWicketImpl"
          factory-bean="singularFormConfig" factory-method="createContext"/>

    <bean id="springServiceRegistry" class="br.net.mirante.singular.form.spring.SpringServiceRegistry"/>

    <bean id="showcaseDictionaryLoader" class="br.net.mirante.singular.showcase.dao.form.ShowcaseDictionaryLoader"/>

	<bean id="formConfigWithoutDatabase" class="br.net.mirante.singular.form.spring.SpringFormConfig">
        <property name="dictionaryLoader" ref="showcaseDictionaryLoader"/>
	</bean>
	
	<bean id="showcaseDatabaseDocumentFactory" 
		  class="br.net.mirante.singular.showcase.view.page.form.crud.services.ShowcaseDocumentFactory"/>

	<bean id="formConfigWithDatabase" class="br.net.mirante.singular.form.spring.SpringFormConfig">
        <property name="dictionaryLoader" ref="showcaseDictionaryLoader"/>
        <property name="documentFactory" ref="showcaseDatabaseDocumentFactory"/>
	</bean>

</beans>

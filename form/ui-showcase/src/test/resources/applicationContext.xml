<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:component-scan base-package="org.opensingular.singular.showcase"/>
    <import resource="conf/database.xml"/>

    <bean id="uiAdminWicketFilterContext" class="org.opensingular.singular.form.showcase.wicket.UIAdminWicketFilterContext"/>
    <bean id="myWebApp" class="org.opensingular.singular.form.showcase.wicket.ShowcaseApplication"/>

    <bean id="singularFormConfig" class="org.opensingular.form.wicket.SingularFormConfigWicketImpl">
        <property name="serviceRegistry" ref="springServiceRegistry"/>
    </bean>

    <bean id="singularFormContext" class="org.opensingular.form.wicket.SingularFormContextWicketImpl"
          factory-bean="singularFormConfig" factory-method="createContext"/>

    <bean id="springServiceRegistry" class="org.opensingular.form.spring.SpringServiceRegistry"/>

    <bean id="showcaseTypeLoader" class="org.opensingular.singular.form.showcase.dao.form.ShowcaseTypeLoader"/>

    <bean id="showcaseStudioTypeLoader" class="org.opensingular.singular.form.showcase.dao.form.studio.ShowcaseStudioTypeLoader"/>

	<bean id="formConfigWithoutDatabase" class="org.opensingular.form.spring.SpringFormConfig">
        <property name="typeLoader" ref="showcaseTypeLoader"/>
	</bean>
	
	<bean id="showcaseDatabaseDocumentFactory" 
		  class="org.opensingular.singular.form.showcase.view.page.form.crud.services.ShowcaseDocumentFactory"/>

	<bean id="formConfigWithDatabase" class="org.opensingular.form.spring.SpringFormConfig">
        <property name="typeLoader" ref="showcaseTypeLoader"/>
        <property name="documentFactory" ref="showcaseDatabaseDocumentFactory"/>
	</bean>

    <bean id="filePersistence" class="org.opensingular.form.persistence.service.AttachmentPersistenceService" />
    <bean id="attachmentDao" class="org.opensingular.form.persistence.dao.AttachmentDao" />
    <bean id="attachmentContentDao" class="org.opensingular.form.persistence.dao.AttachmentContentDao" />
    <bean id="studioCollectionPersistenceFactory" class="org.opensingular.singular.studio.persistence.StudioCollectionPersistenceFactory" />
    <bean id="collectionGallery" class="org.opensingular.singular.studio.core.CollectionGallery" />

</beans>

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-4.1.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-4.1.xsd">

    <util:properties id="admin" location="classpath:/admin-config.properties"/>

    <import resource="conf/database.xml"/>
    <import resource="conf/cache.xml"/>
    <context:component-scan base-package="br.net.mirante.singular"/>

    <bean id="uiAdminWicketFilterContext" class="br.net.mirante.singular.showcase.wicket.UIAdminWicketFilterContext"/>


    <bean id="singularFormConfig" class="br.net.mirante.singular.form.wicket.SingularFormConfigWicketImpl">
        <property name="serviceRegistry" ref="springServiceRegistry"/>
    </bean>

    <bean id="singularFormContext" class="br.net.mirante.singular.form.wicket.SingularFormContextWicketImpl"
          factory-bean="singularFormConfig" factory-method="createContext"/>

    <bean id="springServiceRegistry"
          class="br.net.mirante.singular.showcase.view.page.form.crud.services.SpringServiceRegistry"/>


</beans>
